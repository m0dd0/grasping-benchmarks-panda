{
    "build": {
        "dockerfile": "../../docker/se3dif/Dockerfile",
        "args": {
            "IS_DEVCONTAINER_BUILD": "true",
        }
    },
    "runArgs": [
        "--gpus",
        "all",
        "--net",
        "host",
        "--mount",
        "type=bind,source=./docker/se3dif/additional_data/data,target=/home/data"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "GitHub.copilot",
                "mhutchie.git-graph",
                "ms-python.black-formatter",
                "GitHub.copilot-chat",
                "ms-toolsai.jupyter",
                "ms-toolsai.vscode-jupyter-cell-tags",
                "ms-toolsai.jupyter-keymap",
                "ms-toolsai.jupyter-renderers",
                "ms-toolsai.vscode-jupyter-slideshow",
                "Percy.vscode-numpy-viewer"
            ]
        }
    },
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/catkin_ws/src/grasping-benchmark-panda,type=bind",
    "workspaceFolder": "/home/catkin_ws/src/grasping-benchmark-panda",
    "postCreateCommand": "bash ./.devcontainer/se3dif/postCreateCommand.sh"
}